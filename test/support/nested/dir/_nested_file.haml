- content_for :title do
  = ['Admin', 'Accounts', 'New'].compact.join(' - ')
.row
  .col-md-12
    %ul.breadcrumb
      %li
        = link_to root_url(subdomain: 'Admin') do
          %i.fa.fa-fw.fa-home
          %span.text Home
      %li
        = link_to admin_accounts_path do
          %i.fa.fa-fw.fa-globe
          %span.text New accounts
      %li.active=t('Create Account')
    %fieldset
      = f.input :blah, label: 'BLAH', hint: 'BLABBLOO'

/ main
.content
  .main-header
    %h2 Create Account
  / main-content
  .main-content
    .row
      .col-md-12
        = render 'form'

%span.text Job ##{@job.id} (#{@job.queue})

%p
  %label{ for: 'fieldName' } Name
  %br
  %input#fieldName{ name: 'cm-name', type: 'text' }

%label{ for: 'fieldyhiddl' } Phone Number

= link_to 'Sign up for EnergyLink', signup_path, class: 'btn btn-lg btn-success'

%span.identifier #{user.username} (#{user.email})
